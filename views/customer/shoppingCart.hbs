<h1>Shopping Cart</h1>
{{#each orders}}
<img src="{{cakeId.image}}" alt="">
<br>
<h3>Name: {{cakeId.name}}</h3>
<h3>Price per Cake: ${{cakeId.price}}</h3>
<form action="/shoppingCart/{{_id}}?_method=PUT" method="POST">
    <label for="quantity">Quantity: </label>
    <input type="number" name="quantity" value="{{quantity}}">
    <label for="pickUp">Pick Up Date and Time: </label>
    <input type="datetime-local" name="pickUp" value="{{pickUp}}">
    <label for="comment">Comments: </label>
    <textarea name="comment" cols="30" rows="10">{{comments}}</textarea>
    <input type="hidden" name="status" value="{{status}}">
    <input type="hidden" name="cakeId" value="{{cakeId._id}}">
    <input type="submit" value="Save Changes">
</form>
<form action="/shoppingCart/{{_id}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete">
</form>
{{/each}}
<h2>Total cost: ${{sum}}</h2>

<form action="/" method="GET">
<input type="submit" value="Continue Shopping">
</form>
<form action="/shoppingCart/submit" method="POST">
    <input type="submit" value="Submit Order">
</form>
